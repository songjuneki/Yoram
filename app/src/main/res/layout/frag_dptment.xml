<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="vm"
            type="com.sjk.yoram.viewmodel.FragDptmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
            android:text="조직도입니다"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


        <com.mancj.materialsearchbar.MaterialSearchBar
            android:id="@+id/frag_dptment_searchbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="8dp"
            app:mt_placeholder="이름 검색"
            app:mt_roundedSearchBarEnabled="true"
            app:mt_maxSuggestionsCount="0"
            app:mt_hint="이름 검색"
            app:mt_speechMode="false" />

        <Spinner
            android:id="@+id/frag_dptment_dropdown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/frag_dptment_searchbar"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="12dp"
            android:spinnerMode="dropdown" />
        <Spinner
            android:id="@+id/frag_dptment_dropdown_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/frag_dptment_searchbar"
            app:layout_constraintLeft_toRightOf="@id/frag_dptment_dropdown"
            app:layout_constraintWidth_percent="0.3"
            android:layout_margin="12dp"
            android:spinnerMode="dropdown"
            android:visibility="invisible" />


        <androidx.recyclerview.widget.RecyclerView
            android:visibility="visible"
            android:id="@+id/frag_dptment_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/frag_dptment_dropdown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="8dp"
            android:orientation="horizontal" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>