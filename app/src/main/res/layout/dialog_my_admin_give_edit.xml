<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.sjk.yoram.viewmodel.PrefViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:background="@color/xd_light_background">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dialog_my_admin_give_edit_gv05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dialog_my_admin_give_edit_gv95"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dialog_my_admin_give_edit_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="?attr/actionBarSize" />

        <TextView
            android:id="@+id/dialog_my_admin_give_edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="헌금 수정"
            android:textSize="18sp"
            android:textColor="@color/xd_light_title"
            android:fontFamily="@font/pretendard_medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/dialog_my_admin_give_edit_header"
            android:layout_margin="18dp" />

        <ImageButton
            android:id="@+id/dialog_my_admin_give_edit_delete"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/shape_circle_image_btn"
            android:src="@drawable/ic_baseline_delete_forever_24"
            app:tint="@color/xd_light_hint"
            android:scaleType="fitCenter"
            android:soundEffectsEnabled="true"
            android:clickable="true"
            android:focusable="true"
            android:hapticFeedbackEnabled="true"
            android:onClick="@{(v) -> vm.btnEvent(v.id)}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="@id/dialog_my_admin_give_edit_gv95" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dialog_my_admin_give_edit_name_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/dialog_my_admin_give_edit_header"
            app:layout_constraintLeft_toLeftOf="@id/dialog_my_admin_give_edit_gv05"
            app:layout_constraintRight_toRightOf="@id/dialog_my_admin_give_edit_gv95"
            android:layout_marginTop="8dp"
            android:background="@color/xd_light_transparent"
            app:boxStrokeColor="@color/xd_light_dot_indicator_enabled"
            app:hintEnabled="true"
            android:hint="이름"
            app:hintTextColor="@color/xd_light_text_hint"
            app:errorIconDrawable="@null"
            app:errorTextAppearance="@style/ErrorInputTextStyle">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/xd_light_transparent"
                android:fontFamily="@font/pretendard_medium"
                android:text="@={vm.detailGiveType.name}"
                android:textColorHint="@color/xd_light_title" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_my_admin_give_edit_cancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="취소"
            android:textColor="@color/xd_light_background"
            android:textSize="17sp"
            android:fontFamily="@font/pretendard_bold"
            app:layout_constraintTop_toBottomOf="@id/dialog_my_admin_give_edit_name_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/dialog_my_admin_give_edit_apply"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="32dp"
            android:onClick="@{(v) -> vm.btnEvent(v.id)}"
            android:background="@color/xd_light_text_hint"
            android:foreground="?attr/selectableItemBackground"
            android:soundEffectsEnabled="true"
            android:hapticFeedbackEnabled="true" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_my_admin_give_edit_apply"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="적용"
            android:textColor="@color/xd_light_background"
            android:textSize="17sp"
            android:fontFamily="@font/pretendard_bold"
            app:layout_constraintTop_toBottomOf="@id/dialog_my_admin_give_edit_name_layout"
            app:layout_constraintLeft_toRightOf="@id/dialog_my_admin_give_edit_cancel"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="32dp"
            android:onClick="@{(v) -> vm.btnEvent(v.id)}"
            android:background="@color/xd_light_dot_indicator_enabled"
            android:foreground="?attr/selectableItemBackground"
            android:soundEffectsEnabled="true"
            android:hapticFeedbackEnabled="true" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>