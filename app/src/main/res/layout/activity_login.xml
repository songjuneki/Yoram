<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:id="@+id/login_root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/login_cancel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_close_24"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:layout_margin="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/login_et_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/login_cancel"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/login_name_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/login_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="이름" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:visibility="gone"
                    android:id="@+id/login_bd_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    app:layout_constraintTop_toBottomOf="@id/login_name_input_layout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/login_bd_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="생년월일" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:visibility="gone"
                    android:id="@+id/login_pw_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    app:layout_constraintTop_toBottomOf="@id/login_bd_input_layout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/login_pw_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="비밀번호"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/login_join_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/login_et_layout"
                app:layout_constraintRight_toRightOf="@id/login_et_layout"
                android:layout_margin="8dp"
                android:text="계정생성"
                android:textColor="#000000"
                android:background="#00000000"/>
            <Button
                android:id="@+id/login_find_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/login_et_layout"
                app:layout_constraintRight_toLeftOf="@id/login_join_btn"
                android:layout_margin="8dp"
                android:text="계정찾기"
                android:textColor="#000000"
                android:background="#00000000" />
            <Button
                android:id="@+id/login_ok_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/login_join_btn"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="8dp"
                android:text="확인" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>