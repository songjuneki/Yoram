<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/xd_light_background">
        <ImageView
            android:id="@+id/frag_error_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@drawable/ic_working"
            android:scaleType="fitCenter"
            android:tintMode="multiply"
            android:alpha="0.2048"
            app:tint="#A8A8A8" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="문제가 발생했습니다. 다시 시도해주세요\n문제가 지속될 시 관리자에게 문의해주세요"
                android:textAlignment="center"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/xd_light_text_hint"
                app:layout_constraintTop_toBottomOf="@id/frag_error_img"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingTop="32dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>