<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/xd_light_background">
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/board_media_item_link_progress"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:indicatorColor="@color/xd_light_logo_accent"
            android:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <ImageView
            tools:visibility="gone"
            android:visibility="gone"
            android:id="@+id/board_media_item_link_error"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/baseline_error_outline_24"
            app:tint="@color/xd_light_hint"
            android:elevation="0dp"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <ImageView
            android:id="@+id/board_media_item_link_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:elevation="1dp"
            android:maxHeight="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <View
            tools:visibility="gone"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/board_media_item_link_url"
            app:layout_constraintBottom_toBottomOf="@id/board_media_item_link_description"
            android:background="@color/xd_light_text_hint"
            android:alpha="0.8"
            android:elevation="2dp"/>
        <TextView
            android:id="@+id/board_media_item_link_url"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:fontFamily="@font/pretendard_semibold"
            android:textSize="14sp"
            android:textColor="@color/xd_light_dot_indicator_enabled"
            android:textAlignment="textStart"
            android:elevation="3dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/board_media_item_link_title"
            />
        <TextView
            android:id="@+id/board_media_item_link_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:fontFamily="@font/pretendard_semibold"
            android:textSize="16sp"
            android:textColor="@color/xd_light_background"
            android:textAlignment="textStart"
            android:elevation="3dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/board_media_item_link_description"/>

        <TextView
            android:id="@+id/board_media_item_link_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="14sp"
            android:textColor="@color/xd_light_background"
            android:textAlignment="textStart"
            android:elevation="3dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>