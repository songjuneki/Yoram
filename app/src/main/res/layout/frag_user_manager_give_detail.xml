            android:textSize="14sp"
            android:fontFamily="@font/pretendard_medium"
            android:text="헌금 종류"
            app:layout_constraintTop_toBottomOf="@id/frag_user_manager_give_detail_back"
            app:layout_constraintLeft_toLeftOf="@id/frag_user_manager_give_detail_gv05"/>
