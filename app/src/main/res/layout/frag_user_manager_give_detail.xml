            android:id="@+id/frag_user_manager_give_detail_give_type_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            spinnerEntries="@{vm.giveTypeSpinner}"
            android:selection="@={vm.selectedGiveType}"
            android:onItemSelected="@{(p, v, i, o) -> vm.giveTypeSpinnerSelectedChanged(i)}"
            app:layout_constraintTop_toBottomOf="@id/frag_user_manager_give_detail_give_type"
            app:layout_constraintLeft_toLeftOf="@id/frag_user_manager_give_detail_gv05"/>

