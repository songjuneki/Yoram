<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View"/>
        <variable
            name="mainVM"
            type="com.sjk.yoram.viewmodel.MainViewModel" />
        <variable
            name="vm"
            type="com.sjk.yoram.viewmodel.FragIDViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/xd_light_background"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/frag_id_gv05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/frag_id_gv95"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/frag_id_gh_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="?attr/actionBarSize" />

        <TextView
            android:id="@+id/frag_id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="교인증"
            android:textColor="@color/xd_light_title"
            android:textSize="20sp"
            android:fontFamily="@font/pretendard_semibold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/frag_id_gh_top" />

        <ImageButton
            android:id="@+id/frag_id_scanner"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_qr_code_scanner_24"
            android:scaleType="center"
            android:background="#00000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/frag_id_gv95"
            app:layout_constraintBottom_toBottomOf="@id/frag_id_gh_top"
            android:clickable="true"
            android:focusable="true"
            android:hapticFeedbackEnabled="true"
            android:soundEffectsEnabled="true"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="@{(v) -> vm.btnEvent(v.id)}"
            android:visibility="@{mainVM.loginData.permission >= 3 ? View.VISIBLE : View.GONE}"/>

        <TextView
            android:id="@+id/frag_id_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입장을 위한 QR코드"
            android:textColor="@color/xd_light_title"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_semibold"
            app:layout_constraintTop_toBottomOf="@id/frag_id_gh_top"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="32dp"
            android:visibility="@{mainVM.loginData.permission > 0 ? View.VISIBLE : View.INVISIBLE}"/>

        <TextView
            android:id="@+id/frag_id_subtitle_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="이용하시려는 시설의 담당자에게\n QR코드를 보여주세요."
            android:textColor="@color/xd_light_text_hint"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_medium"
            app:layout_constraintTop_toBottomOf="@id/frag_id_subtitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            android:visibility="@{mainVM.loginData.permission > 0 ? View.VISIBLE : View.INVISIBLE}"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frag_id_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/frag_id_subtitle_hint"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            android:visibility="@{mainVM.loginData.permission > 0 ? View.VISIBLE : View.INVISIBLE}">
            <ImageView
                android:id="@+id/frag_id_avatar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_avatar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                bitmapImg="@{mainVM.avatar}"
                app:error="@{@drawable/ic_avatar}"
                app:circleImage="@{true}"
                android:layout_margin="16dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="@id/frag_id_avatar"
                app:layout_constraintLeft_toRightOf="@id/frag_id_avatar"
                app:layout_constraintBottom_toBottomOf="@id/frag_id_avatar"
                android:layout_marginLeft="16dp"
                android:gravity="left">
                <TextView
                    android:id="@+id/frag_id_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{mainVM.loginData.name + ` ` + mainVM.loginData.position_name}"
                    android:textSize="18sp"
                    android:textColor="@color/xd_light_title"
                    android:fontFamily="@font/pretendard_semibold"/>
                <TextView
                    android:id="@+id/frag_id_dpt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{mainVM.loginData.department_name}"
                    android:textSize="16sp"
                    android:textColor="@color/xd_light_title"
                    android:fontFamily="@font/pretendard_regular"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/frag_id_need_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/frag_id_info_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="16dp"
            android:text="교인증을 이용하려면 로그인을 해주세요"
            android:textColor="@color/xd_light_content"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_semibold"
            android:visibility="@{mainVM.loginData.permission > 0 ? View.GONE : View.VISIBLE}"/>



        <androidx.cardview.widget.CardView
            android:id="@+id/frag_id_code_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="#E8EBF2"
            app:cardElevation="8dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintTop_toBottomOf="@id/frag_id_info_layout"
            app:layout_constraintLeft_toLeftOf="@id/frag_id_gv05"
            app:layout_constraintRight_toRightOf="@id/frag_id_gv95"
            app:layout_constraintBottom_toTopOf="@id/frag_id_remain_layout"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="16dp"
            android:visibility="@{mainVM.loginData.permission > 0 ? View.VISIBLE : View.INVISIBLE}">
                <ImageView
                    android:id="@+id/frag_id_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    bitmapImg="@{vm.code}"
                    error="@{@drawable/ic_blured_code}"
                    circleImage="@{false}"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/frag_id_code_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/frag_id_code_layout"
            android:padding="8dp"
            android:elevation="10dp"
            android:visibility="@{vm.isValidCode() ? View.INVISIBLE : View.VISIBLE}" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QR코드 재발급"
                android:textColor="@color/xd_light_dot_indicator_enabled"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_medium"/>
            <ImageButton
                android:id="@+id/frag_id_refresh"
                style="@style/IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_refresh"
                android:scaleType="center"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{(v) -> vm.btnEvent(v.id)}"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frag_id_remain_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="@{mainVM.loginData.permission > 0 ? View.VISIBLE : View.INVISIBLE}">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남은 시간"
                android:textSize="20sp"
                android:textColor="@color/xd_light_title"
                android:fontFamily="@font/pretendard_semibold" />
            <TextView
                android:id="@+id/id_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{`  ` + String.format(`%02d`, vm.timer) + `초`}"
                android:textSize="20sp"
                android:textColor="@{vm.timer > 3 ? @color/xd_light_dot_indicator_enabled : @color/xd_light_red_highlight}"
                android:fontFamily="@font/pretendard_semibold"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>