<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="vm"
            type="com.sjk.yoram.viewmodel.JoinUserViewModel" />
    </data>
    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/join_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="8dp"
                android:text="계정 생성"
                android:textSize="24sp" />
            <ImageButton
                android:id="@+id/join_cancel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_close_24"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:layout_margin="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/join_fname_et_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/join_cancel"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/join_lname_et_layout"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/join_fname_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={vm.fname}"
                    android:hint="*이름(성)" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/join_lname_et_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/join_cancel"
                app:layout_constraintLeft_toRightOf="@id/join_fname_et_layout"
                app:layout_constraintRight_toLeftOf="@id/join_sex_radio_grp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/join_lname_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={vm.lname}"
                    android:hint="*이름" />
            </com.google.android.material.textfield.TextInputLayout>

            <RadioGroup
                android:id="@+id/join_sex_radio_grp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/join_cancel"
                app:layout_constraintLeft_toRightOf="@id/join_lname_et_layout"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/join_lname_et_layout"
                android:orientation="horizontal">
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/join_sex_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:checked="true"
                    android:text="남자" />
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/join_sex_f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="여자" />
            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/join_pw_et_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/join_lname_et_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/join_pw_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={vm.pw}"
                    android:hint="*비밀번호"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/join_pw_check_et_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/join_pw_et_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/join_pw_check_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={vm.pwValid}"
                    android:hint="*비밀번호 확인"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/join_tel1_et_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/join_pw_check_et_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/join_tel1_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={vm.tel1}"
                    android:hint="연락처1" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/join_tel2_et_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/join_tel1_et_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/join_tel2_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={vm.tel2}"
                    android:hint="연락처2" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/join_address_et_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/join_tel2_et_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/join_address_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={vm.address}"
                    android:hint="주소" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/join_carno_et_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/join_address_et_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/join_carno_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={vm.carno}"
                    android:hint="차번호" />
            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:id="@+id/join_agree_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/join_carno_et_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="center"
                android:layout_margin="8dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/join_policy_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical">
                    <TextView
                        android:id="@+id/join_policy_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:textColor="#0000ff"
                        android:text="개인정보 처리 방침" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:text="에 동의합니다." />
                </LinearLayout>
                <CheckBox
                    android:id="@+id/join_agree_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:text="동의" />
            </LinearLayout>
            <Button
                android:id="@+id/join_done_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="생성"
                app:layout_constraintTop_toBottomOf="@id/join_agree_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="32dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>