<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/dpt_header_item_layout"
        android:background="@color/xd_light_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">
            <TextView
                tools:text="헤더이름"
                android:id="@+id/dpt_header_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/xd_light_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="8dp" />
            <TextView
                tools:text="10"
                android:id="@+id/dpt_header_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/xd_light_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/dpt_header_item_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginHorizontal="8dp" />
            <ImageView
                android:id="@+id/dpt_header_item_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_drop_down_24"
                android:rotation="180"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="8dp"
                app:tint="@color/xd_light_content_highlight"
                app:tintMode="multiply"
                android:foregroundTint="@color/xd_light_content_highlight"
                android:foregroundTintMode="multiply"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>