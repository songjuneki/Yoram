<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <import type="com.sjk.yoram.model.UserPermission" />
        <variable
            name="vm"
            type="com.sjk.yoram.viewmodel.SettingViewModel" />
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/xd_light_background">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/xd_light_card_divider">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frag_my_setting_header"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/xd_light_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/frag_my_setting_header_gv05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/frag_my_setting_header_gv95"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />
                <ImageButton
                    android:id="@+id/frag_my_setting_back"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@drawable/shape_circle_image_btn"
                    android:src="@drawable/ic_back"
                    android:scaleType="fitCenter"
                    android:clickable="true"
                    android:onClick="@{}"
                    android:soundEffectsEnabled="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/frag_my_setting_header_gv05"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/frag_my_give_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="설정"
                    android:textSize="20sp"
                    android:textColor="@color/xd_light_title"
                    android:fontFamily="@font/pretendard_semibold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frag_my_setting_noti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/xd_light_background"
                app:layout_constraintTop_toBottomOf="@id/frag_my_setting_header"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/frag_my_setting_noti_gv05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/frag_my_setting_noti_gv95"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />
                <TextView
                    android:id="@+id/frag_my_setting_noti_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="알림"
                    android:textSize="18sp"
                    android:textColor="@color/xd_light_title"
                    android:fontFamily="@font/pretendard_semibold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/frag_my_setting_noti_gv05"
                    android:layout_marginTop="16dp" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/frag_my_setting_noti_push"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/xd_light_background"
                    android:onClick="@{(v) -> vm.btnEvent(v.id)}"
                    app:layout_constraintTop_toBottomOf="@id/frag_my_setting_noti_title"
                    app:layout_constraintLeft_toLeftOf="@id/frag_my_setting_noti_gv05"
                    app:layout_constraintRight_toRightOf="@id/frag_my_setting_noti_gv95">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="푸시 알림"
                        android:textSize="16sp"
                        android:textColor="@color/xd_light_title"
                        android:fontFamily="@font/pretendard_medium"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"/>
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/frag_my_setting_noti_push_switch"
                        style="@style/Theme.Yoram.Switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frag_my_setting_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/xd_light_background"
                app:layout_constraintTop_toBottomOf="@id/frag_my_setting_noti"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp">
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/frag_my_setting_rule_gv05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/frag_my_setting_rule_gv95"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />
                <TextView
                    android:id="@+id/frag_my_setting_rule_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="약관"
                    android:textSize="18sp"
                    android:textColor="@color/xd_light_title"
                    android:fontFamily="@font/pretendard_semibold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/frag_my_setting_rule_gv05"
                    android:layout_marginTop="16dp" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/frag_my_setting_rule_rule"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:onClick="@{(v) -> vm.btnEvent(v.id)}"
                    app:layout_constraintTop_toBottomOf="@id/frag_my_setting_rule_title"
                    app:layout_constraintLeft_toLeftOf="@id/frag_my_setting_rule_gv05"
                    app:layout_constraintRight_toRightOf="@id/frag_my_setting_rule_gv95">
                    <TextView
                        android:id="@+id/frag_my_setting_rule_rule_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이용약관"
                        android:textSize="16sp"
                        android:textColor="@color/xd_light_title"
                        android:fontFamily="@font/pretendard_medium"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="@color/xd_light_text_hint"
                        android:rotation="270"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/frag_my_setting_rule_rule"
                    app:layout_constraintLeft_toLeftOf="@id/frag_my_setting_rule_gv05"
                    app:layout_constraintRight_toRightOf="@id/frag_my_setting_rule_gv95" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/frag_my_setting_rule_privacy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/frag_my_setting_rule_rule"
                    app:layout_constraintLeft_toLeftOf="@id/frag_my_setting_rule_gv05"
                    app:layout_constraintRight_toRightOf="@id/frag_my_setting_rule_gv95">
                    <TextView
                        android:id="@+id/frag_my_setting_rule_privacy_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="개인정보 처리방침"
                        android:textSize="16sp"
                        android:textColor="@color/xd_light_title"
                        android:fontFamily="@font/pretendard_medium"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="@color/xd_light_text_hint"
                        android:rotation="270"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frag_my_setting_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/xd_light_background"
                app:layout_constraintTop_toBottomOf="@id/frag_my_setting_rule"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp">
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/frag_my_setting_account_gv05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/frag_my_setting_account_gv95"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />
                <TextView
                    android:id="@+id/frag_my_setting_account_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="계정 관리"
                    android:textSize="18sp"
                    android:textColor="@color/xd_light_title"
                    android:fontFamily="@font/pretendard_semibold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/frag_my_setting_account_gv05"
                    android:layout_marginTop="16dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/frag_my_setting_account_privacy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/frag_my_setting_account_title"
                    app:layout_constraintLeft_toLeftOf="@id/frag_my_setting_account_gv05"
                    app:layout_constraintRight_toRightOf="@id/frag_my_setting_account_gv95">
                    <TextView
                        android:id="@+id/frag_my_setting_account_privacy_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="공개 범위 수정"
                        android:textSize="16sp"
                        android:textColor="@color/xd_light_title"
                        android:fontFamily="@font/pretendard_medium"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="@color/xd_light_text_hint"
                        android:rotation="270"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/frag_my_setting_account_privacy"
                    app:layout_constraintLeft_toLeftOf="@id/frag_my_setting_account_gv05"
                    app:layout_constraintRight_toRightOf="@id/frag_my_setting_account_gv95" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/frag_my_setting_account_logout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/frag_my_setting_account_privacy"
                    app:layout_constraintLeft_toLeftOf="@id/frag_my_setting_account_gv05"
                    app:layout_constraintRight_toRightOf="@id/frag_my_setting_account_gv95">
                    <TextView
                        android:id="@+id/frag_my_setting_account_logout_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="로그아웃"
                        android:textSize="16sp"
                        android:textColor="@color/xd_light_title"
                        android:fontFamily="@font/pretendard_medium"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/frag_my_setting_account_logout"
                    app:layout_constraintLeft_toLeftOf="@id/frag_my_setting_account_gv05"
                    app:layout_constraintRight_toRightOf="@id/frag_my_setting_account_gv95" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/frag_my_setting_account_delete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/frag_my_setting_account_logout"
                    app:layout_constraintLeft_toLeftOf="@id/frag_my_setting_account_gv05"
                    app:layout_constraintRight_toRightOf="@id/frag_my_setting_account_gv95">
                    <TextView
                        android:id="@+id/frag_my_setting_account_delete_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="계정 삭제"
                        android:textSize="16sp"
                        android:textColor="@color/xd_light_red_highlight"
                        android:fontFamily="@font/pretendard_medium"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frag_my_setting_admin"
                android:visibility="@{vm.userPermission.ordinal() > 4 ? View.VISIBLE : View.GONE}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/xd_light_background"
                app:layout_constraintTop_toBottomOf="@id/frag_my_setting_account"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp">
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/frag_my_setting_admin_gv05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/frag_my_setting_admin_gv95"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />
                <TextView
                    android:id="@+id/frag_my_setting_admin_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="관리자 메뉴"
                    android:textSize="18sp"
                    android:textColor="@color/xd_light_title"
                    android:fontFamily="@font/pretendard_semibold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/frag_my_setting_admin_gv05"
                    android:layout_marginTop="16dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/frag_my_setting_admin_banner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/frag_my_setting_admin_title"
                    app:layout_constraintLeft_toLeftOf="@id/frag_my_setting_admin_gv05"
                    app:layout_constraintRight_toRightOf="@id/frag_my_setting_admin_gv95">
                    <TextView
                        android:id="@+id/frag_my_setting_admin_banner_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="배너 설정"
                        android:textSize="16sp"
                        android:textColor="@color/xd_light_title"
                        android:fontFamily="@font/pretendard_medium"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="@color/xd_light_text_hint"
                        android:rotation="270"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/frag_my_setting_admin_banner"
                    app:layout_constraintLeft_toLeftOf="@id/frag_my_setting_admin_gv05"
                    app:layout_constraintRight_toRightOf="@id/frag_my_setting_admin_gv95" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/frag_my_setting_admin_user"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/frag_my_setting_admin_banner"
                    app:layout_constraintLeft_toLeftOf="@id/frag_my_setting_admin_gv05"
                    app:layout_constraintRight_toRightOf="@id/frag_my_setting_admin_gv95">
                    <TextView
                        android:id="@+id/frag_my_setting_admin_user_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="계정 관리"
                        android:textSize="16sp"
                        android:textColor="@color/xd_light_title"
                        android:fontFamily="@font/pretendard_medium"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="@color/xd_light_text_hint"
                        android:rotation="270"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>