<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
       <com.google.android.material.card.MaterialCardView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:cardBackgroundColor="@color/xd_light_background"
           app:cardCornerRadius="5dp"
           app:strokeWidth="1dp"
           app:strokeColor="@color/xd_light_weak_border">

           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <ImageView
                   android:id="@+id/list_home_board_more_item_arrow"
                   android:layout_width="0dp"
                   android:layout_height="0dp"
                   android:src="@drawable/shape_arrow_to_back"
                   android:scaleType="centerInside"
                   android:padding="12dp"
                   android:background="@drawable/shape_circle_act"
                   app:tint="@color/xd_light_background"
                   android:backgroundTint="@color/xd_light_logo_accent"
                   android:rotation="180"
                   app:layout_constraintDimensionRatio="w, 1:1"
                   app:layout_constraintWidth_percent="0.325"
                   app:layout_constraintHeight_percent="0.325"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintBottom_toTopOf="@id/list_home_board_more_item_text"
                   app:layout_constraintVertical_chainStyle="spread"
                   />

               <TextView
                   android:id="@+id/list_home_board_more_item_text"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:autoSizeMaxTextSize="24sp"
                   android:autoSizeMinTextSize="12sp"
                   android:autoSizeStepGranularity="1sp"
                   android:autoSizeTextType="uniform"
                   android:fontFamily="@font/pretendard_semibold"
                   android:gravity="center"
                   android:lines="1"
                   android:maxLines="1"
                   android:textColor="@color/xd_light_title"
                   android:textSize="18sp"
                   android:text="더보기"
                   app:layout_constraintVertical_chainStyle="packed"
                   app:layout_constraintTop_toBottomOf="@id/list_home_board_more_item_arrow"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"/>

           </androidx.constraintlayout.widget.ConstraintLayout>

       </com.google.android.material.card.MaterialCardView>
</layout>