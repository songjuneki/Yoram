<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.sjk.yoram.viewmodel.InitViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/xd_light_background">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/init_gv05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/init_gh_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />


        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/init_frag_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/xd_light_background"/>

        <ImageButton
            android:id="@+id/init_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:visibility="invisible"
            android:src="@drawable/shape_arrow_to_back"
            android:scaleType="fitCenter"
            android:backgroundTint="@color/xd_light_transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/init_gv05"
            app:layout_constraintBottom_toBottomOf="@id/init_gh_10" />

        <TextView
            android:id="@+id/init_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/init_gh_10"
            android:text="타이틀"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_semibold" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>