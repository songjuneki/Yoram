<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/xd_light_title</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="ToggleButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/xd_light_state_button_background</item>
        <item name="strokeColor">@color/stroke_toggle_button_selector_color</item>
        <item name="android:textColor">@color/text_toggle_button_selector_color</item>
    </style>
    <style name="IconButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>